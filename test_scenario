$ cat PATH_TO_TEST/test/1
hello world!

$ ls PATH_TO_TEST/test/
1  words

$ cat PATH_TO_TEST/test/2
ERROR: SOME_ERR_MESSAGE

$ cat < PATH_TO_TEST/test/1
hello world!

$ cattt PATH_TO_TEST/test/1
ERROR: SOME_ERR_MESSAGE

$ cat < PATH_TO_TEST/test/1 > PATH_TO_TEST/test/2

$ ls PATH_TO_TEST/test/
1  2  words

$ sleep 5 &

$ cat PATH_TO_TEST/test/2
hello world!

$ cat < PATH_TO_TEST/test/words | sort | wc -c > PATH_TO_TEST/test/count

$ cat PATH_TO_TEST/test/count
18

$ ls PATH_TO_TEST/test/
1  2  count  words

$ cd PATH_TO_TEST/test/

$ ls
1  2  count  words
